{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --allow-write --allow-run scripts/dev.ts",
    "start": "deno run --allow-net --allow-read --allow-env src/main.ts",
    "build": "deno run --allow-read --allow-write --allow-env --allow-run scripts/build.ts",
    "watch": "deno run --allow-read --allow-write --allow-env --allow-run scripts/build.ts --watch"
  },
  "compilerOptions": {
    "strict": true,
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
  },
  "imports": {
    "oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
    "std/": "https://deno.land/std@0.210.0/",
    "std/path/": "https://deno.land/std@0.210.0/path/",
    "esbuild": "https://deno.land/x/esbuild@v0.19.12/mod.js"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "semiColons": true,
      "singleQuote": true
    }
  }
}